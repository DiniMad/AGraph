<Window x:Name="WindowsMain" x:Class="AGraph.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AGraph"
        mc:Ignorable="d"
        Title="A Graph" Height="500" Width="800" ResizeMode="CanMinimize" WindowStyle="ToolWindow" WindowState="Maximized" WindowStartupLocation="CenterScreen" Loaded="WindowsMain_Loaded">
    <Window.Resources>
        <Style TargetType="Button" x:Key="ButtonRadiusEffect">
            <Setter Property="Background" Value="Black" />
            <Setter Property="TextBlock.TextAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="25" Background="Black">
                            <ContentPresenter x:Name="contentPresenter" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button" x:Key="Vertex">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="20" Background="{TemplateBinding Background}" BorderThickness="2" BorderBrush="Black">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Gray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid x:Name="GridMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="135"/>
            <ColumnDefinition Width="642*"/>
            <ColumnDefinition Width="135"/>
        </Grid.ColumnDefinitions>

        <!--<Button x:Name="Btntest" Grid.Column="1"  Style="{StaticResource ButtonRadiusEffect}" Height="50" Width="50" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="200,0,0,0" />
        <Button x:Name="Btn3"  Style="{StaticResource Vertex}" Height="36" Width="36" Content="A" Foreground="White" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="300,100,0,500"/>
        <Button x:Name="btn1"  Style="{StaticResource ButtonRadiusEffect}" Height="50" Width="50" Content="A" Foreground="White" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-500,0,0,0" Click="ButtonBase_OnClick"/>
        <Button  Style="{StaticResource ButtonRadiusEffect}" Height="50" Width="50" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,500,0,0"/>
        <Button  Style="{StaticResource ButtonRadiusEffect}" Height="50" Width="50" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-500,0,0"/>-->
        <Label x:Name="LblVerticesTextBoxPlaceHolder" Grid.Column="0" Content="Number of Vertices" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="125" Margin="5,10,5,0" HorizontalContentAlignment="Center" Foreground="#A9A9A9" FontWeight="Bold"/>
        <TextBox x:Name="TxtVerticesNumber" Grid.Column="0" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="125" Margin="5,10,5,0" PreviewTextInput="VertexTextBox_PreviewTextInput" Background="Transparent" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" TextChanged="TxtVerticesNumber_TextChanged"/>
        <Button x:Name="BtnCreateGraph" Grid.Column="0" Content="Create Graph" HorizontalAlignment="Left" Margin="5,40,5,0" VerticalAlignment="Top" Width="125" Click="BtnCreateGraph_Click" Height="24"/>
        <Button x:Name="BtnIsGraphConnected" Grid.Column="0" Content="Is Graph Connected" HorizontalAlignment="Left" Margin="5,70,5,0" VerticalAlignment="Top" Width="125" Height="24" Click="BtnIsGraphConnected_OnClick" IsEnabled="False"/>
        <Button x:Name="BtnIsGraphEulerian" Grid.Column="0" Content="Is Graph Eulerian" HorizontalAlignment="Left" Margin="5,100,5,0" VerticalAlignment="Top" Width="125" Height="24" Click="BtnIsGraphEulerian_OnClick" IsEnabled="False"/>
        <Button x:Name="BtnStartGreedyColoring" Grid.Column="0" Content="Start Greedy Coloring" HorizontalAlignment="Left" Margin="5,130,5,0" VerticalAlignment="Top" Width="125" Height="24" Click="BtnStartGreedyColoring_OnClick" IsEnabled="False"/>
        <Button x:Name="BtnStartOptimalColoring" Grid.Column="0" Content="Start Optimal Coloring" HorizontalAlignment="Left" Margin="5,160,5,0" VerticalAlignment="Top" Width="125" Height="24" Click="BtnStartOptimalColoring_OnClick" IsEnabled="False"/>
        <!-- Line From Mouse Click To Mouse Position Two Canvases
